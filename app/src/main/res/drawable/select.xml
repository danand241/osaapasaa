<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="#10000000" android:startColor="#10000000" />
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <gradient android:endColor="#50000000" android:startColor="#50000000" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="#90000000" android:startColor="#90000000" />
        </shape>
    </item>
</selector>